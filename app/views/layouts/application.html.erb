<!DOCTYPE html>
<html>
<head>
    <%= render 'layouts/meta_app' %>
    <title><%= full_title(yield(:title)) %></title>
    <%= render 'layouts/rails_default' %>
    <%= render 'layouts/shim' %>

    <!-- Include style per-controller - vendor plugins -->
    <%= stylesheet_link_tag params[:controller] if
    ::Rails.application.assets.find_asset("#{params[:controller]}.css") %>

</head>
<body>

        <!-- Wrapper-->
        <div id="wrapper">

        <!-- Navigation -->
        <%= render 'layouts/navigation' %>

        <!-- Page wraper -->
        <div id="page-wrapper" class="gray-bg">

            <!-- Page wrapper -->
            <%= render 'layouts/topnavbar' %>

            <!-- Main view  -->
            <%= yield %>

            <!-- Footer -->
            <%= render 'layouts/footer' %>
            <%= debug(params) if Rails.env.development? %>

        </div>
        <!-- End page wrapper-->

    </div>
    <!-- End wrapper-->

    <!-- Include javascript per-controller - vendor plugins -->
    <%= javascript_include_tag params[:controller] if
    ::Rails.application.assets.find_asset("#{params[:controller]}.js") %>

</body>
</html>
