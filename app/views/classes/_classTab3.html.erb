<div class="tab-pane" id="tab-3">
  <div class="feed-activity-list">

    <div class="feed-element">
      <div class="chat-form">
        <form role="form">
          <div class="form-group">
            <textarea class="form-control" placeholder="Announcement"></textarea>
          </div>
          <div class="text-right">
            <button type="submit" class="btn btn-sm btn-primary m-t-n-xs">
            <strong>Post Announcement</strong></button>
          </div>
        </form>
      </div>
    </div>

    <div class="feed-element">
      <div class="media-body ">
          <small class="pull-right">2h ago</small>
          <strong><%= current_user.first_name%> <%= current_user.last_name%>
          </strong> posted <br>
          <small class="text-muted">Today 2:10 pm - 12.06.2014</small>
          <div class="well">
              Homework 1 is posted. Due next week.
          </div>
          <button class="btn btn-white btn-xs">
            <i class="fa fa-pencil"></i>Edit</button>
          <button class="btn btn-white btn-xs">
            <i class="fa fa-trash"></i>Delete</button>
      </div>
    </div>

    <div class="feed-element">
      <div class="media-body ">
        <small class="pull-right">2h ago</small>
        <strong><%= current_user.first_name%> <%= current_user.last_name%>
        </strong> added Homework1.pdf<br>
        <small class="text-muted">2 days ago at 8:30am</small>
      </div>
    </div>

  </div>
</div>
