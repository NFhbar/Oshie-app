<div id="tab-2" class="tab-pane">
  <div class="panel-body">
    <div class="ibox float-e-margins">

      <div class="ibox-title">
          <h5>Question 1</h5>
          <div class="ibox-tools">
              <a class="collapse-link">
                  <i class="fa fa-chevron-up"></i>
              </a>
          </div>
      </div>

      <div class="ibox-content no-border">
        <fieldset class="form-horizontal">
          <div class="row">
            <div class="form-group"><label class="col-sm-2 control-label">Points</label>
                <div class="col-sm-3"><input class="touchspin3" type="text" value="" name="demo3">
                </div>
            </div>
          </div>

          <div class="row">
            <div class="form-group"><label class="col-sm-2 control-label">Type</label>
              <div class="col-sm-3">
                <select data-placeholder="Select Type" class="chosen-select"  tabindex="2">
                    <option value="Multiple Choice">Multiple Choice</option>
                    <option value="Open Answer">Open Answer</option>
                </select>
              </div>
            </div>
          </div>

        </fieldset>
      </div>

      <div class="ibox-content no-padding">
        <%= text_area_tag :content, "Using tinymce, would like to incorporate wiris
        for math and wiris quiz http://www.wiris.com/plugins/docs/tinymce", :class => "tinymce", :rows => 40, :cols => 120 %>

        <%= tinymce %>
      </div>

      <div class="ibox-content no-padding">
        <form method="get" class="form-horizontal">
          <div class="hr-line-dashed"></div>

          <div class="form-group">

            <div class="row">
              <div class="col-sm-8"><input type="text" class="form-control">
              </div>
              <div class="col-sm-2 i-checks"><label> <input type="checkbox" value=""> <i></i>
                Correct Answer</label>
              </div>
              <div class="col-sm-2">
                <button class="btn btn-warning" type="button"><i class="fa fa-times"></i>
                  <span class="bold">Remove</span></button>
              </div>
            </div>

            <div class="row">
              <div class="col-sm-8"><input type="text" class="form-control">
              </div>
              <div class="col-sm-2 i-checks"><label> <input type="checkbox" value=""> <i></i>
                Correct Answer</label>
              </div>
              <div class="col-sm-2">
                <button class="btn btn-warning " type="button"><i class="fa fa-times"></i>
                  <span class="bold">Remove</span></button>
              </div>
            </div>

            <div class="row">
              <div class="col-sm-2">
                <button class="btn btn-primary " type="button"><i class="fa fa-plus"></i>
                  <span class="bold">Add Answer</span></button>
              </div>
            </div>

          </div>
        </form>

        <div class="hr-line-dashed"></div>

        <div class="row">
          <div class="col-sm-2">
            <div class="col-sm-2">
              <button class="btn btn-danger " type="button"><i class="fa fa-times"></i>
                <span class="bold">Delete Question 1</span></button>
            </div>
          </div>
        </div>

      </div>

    </div>

    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <button class="btn btn-primary " type="button"><i class="fa fa-plus"></i>
          <span class="bold">Add Question</span></button>
          <div class="ibox-tools">
              <a class="collapse-link">
                  <i class="fa fa-chevron-up"></i>
              </a>
          </div>
      </div>

    </div>
  </div>
</div>
